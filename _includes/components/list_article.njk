<article class="list" lang="{{ post.data.lang or "en" }}">
    <a href="{{ post.url }}">
        {% if post.data.cover %}
            <img src="{{ post.data.cover }}" aria-hidden="true" alt=""></img>
        {% endif %}
        <h2>{{ post.data.title }}</h2>
    </a>
    {% if post.data.summary %}
        <p class="summary">{{ post.data.summary}}</p>
    {% endif %}
    <p class="meta-info">
        {{ post.date | postDate }}
    </p>
    {% include "components/article-tags.njk" %}
</article>
